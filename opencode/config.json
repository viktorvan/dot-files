{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-5",
  "permission": {
    "bash": {
      "docker *": "deny",
      "docker-compose *": "deny"
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_unshare": "none",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "session_child_cycle": "ctrl+right",
    "session_child_cycle_reverse": "ctrl+left",
    "messages_page_up": "pgup",
    "messages_page_down": "pgdown",
    "messages_half_page_up": "ctrl+b",
    "messages_half_page_down": "ctrl+f",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+l",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j"
  },
  "agent": {
    "delegating-manager": {
      "description": "Plans work, decomposes tasks, and delegates to fresh coder sub-agents. Never edits files.",
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./prompts/delegating_manager.md}",
      "tools": {
        "session_request_new_session": true,
        "session_request_next_state": true,
        "session_rollback_state": true,
        "session_get_current_state": true,
        "plan_add": true,
        "plan_read": true,
        "task_add": true,
        "task_read": true,
        "review_submit_review": false,
        "review_plan_read": true,
        "review_implementation_read": true,
        "review_review_plan_read": true,
        "review_review_implementation_read": true,
        "task_task_add": true,
        "task_task_read": true,
        "write": false,
        "edit": false,
        "patch": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "fast-coder": {
      "description": "Implements tasks from the manager. Writes code and runs safe bash.",
      "mode": "subagent",
      "model": "anthropic/claude-haiku-4-5",
      "prompt": "{file:./prompts/coder.md}",
      "tools": {
        "task_read": true,
        "task_start_task": true,
        "task_finish_task": true,
        "task_task_read": true,
        "write": true,
        "edit": true,
        "patch": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "expert-coder": {
      "description": "Implements tasks from the manager. Writes code and runs safe bash.",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-5",
      "prompt": "{file:./prompts/coder.md}",
      "tools": {
        "task_read": true,
        "task_start_task": true,
        "task_finish_task": true,
        "task_task_read": true,
        "write": true,
        "edit": true,
        "patch": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "reviewer": {
      "description": "Reviews and verifies implementation plans from the manager. Read-only analysis and validation.",
      "mode": "subagent",
      "model": "zen/glm-4.6",
      "prompt": "{file:./prompts/reviewer.md}",
      "tools": {
        "review_submit_review": true,
        "review_plan_add": true,
        "review_implementation_add": true,
        "review_review_plan_add": true,
        "review_review_implementation_add": true,
        "write": false,
        "edit": false,
        "patch": false,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true
      }
    }
  },
  "plugin": [
    "file:///Users/viktor/developer/oss/opencode-supermemory",
    "file:///Users/viktor/developer/oss/opencode-morph-fast-apply"
  ],
  "instructions": [
    "/Users/viktor/developer/oss/opencode-morph-fast-apply/MORPH_INSTRUCTIONS.md"
  ]
}
